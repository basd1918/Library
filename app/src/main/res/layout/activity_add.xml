<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add"
    android:background="@drawable/biblioteca"
    android:orientation="vertical"
    android:gravity="center_horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add a new book"
        android:textSize="24sp"
        android:background="#99ffffff" />

    <EditText
        android:id="@+id/editTextTitlu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Title of the Book"
        android:inputType="textCapSentences"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Author of the Book"
        android:inputType="textCapSentences"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextEditura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Publisher Name"
        android:inputType="textCapSentences"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextAnPublicatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Year of Publication"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextCategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Category of the Book"
        android:inputType="textPersonName|textCapSentences"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextCotaCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Book number"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/buttonAdaugaCarteNoua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Add"
        android:padding="5dp"
        android:background="#4CAF50"
        android:textSize="18sp"
        android:textColor="#fff"/>
</LinearLayout>
</ScrollView>