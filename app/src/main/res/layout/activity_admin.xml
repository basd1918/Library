<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biblioteca"
    tools:context=".AdminActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewAdmin"
        android:layout_width="247dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Welcome!"
        android:background="#88141414"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="30dp" />
    <Button
        android:id="@+id/BtnAdd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Add a new book"
        android:padding="5dp"
        android:background="#E21B9A5F"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/BtnUpdate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Update a book"
        android:padding="5dp"
        android:background="#EBFF8F00"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/BtnDelete"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete a book"
        android:padding="5dp"
        android:background="#DC1565C0"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/BtnReturn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Return a book"
        android:padding="5dp"
        android:background="#E6C62828"
        android:textSize="18sp"
        android:textColor="#fff" />
    <Button
        android:id="@+id/BtnListaCartiAmin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View all books"
        android:padding="5dp"
        android:background="#ED774970"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/identic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#fff"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/nrExempl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#fff"/>

</LinearLayout>
</ScrollView>